<Window x:Class="wpfapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfapp"
        mc:Ignorable="d"
        Title="SolidWorks API Test" Height="600" Width="400">
    <StackPanel>
        <GroupBox Margin="2" Header="连接SolidWorks" Height="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Width="150" Height="25" Click="Button_Click">连接SolidWorks</Button>
                <TextBox x:Name="msgBox" Grid.Column="1" TextWrapping="WrapWithOverflow"></TextBox>
            </Grid>
        </GroupBox>
        <GroupBox Margin="2,10" Header="文档" Height="120">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Margin="2" Width="100" Height="25" Click="Button_Click_1">新建零件</Button>
                <Button Grid.Row="1" Grid.Column="0" Margin="2" Width="100" Height="25" Click="Button_Click_2">新建装配体</Button>
                <Button Grid.Row="2" Grid.Column="0" Margin="2" Width="100" Height="25" Click="Button_Click_3">新建工程图</Button>

                <Button Grid.Row="0" Grid.Column="1" Margin="2" Width="100" Height="25" Click="Button_Click_4">打开零件</Button>
                <Button Grid.Row="1" Grid.Column="1" Margin="2" Width="100" Height="25" Click="Button_Click_5">打开装配体</Button>
                <Button Grid.Row="2" Grid.Column="1" Margin="2" Width="100" Height="25" Click="Button_Click_6">打开工程图</Button>

                <Button Grid.Row="0" Grid.Column="2" Margin="2" Width="100" Height="25" Click="Button_Click_8">保存当前</Button>
                <Button Grid.Row="1" Grid.Column="2" Margin="2" Width="100" Height="25" Click="Button_Click_9">另存当前</Button>
                <Button Grid.Row="2" Grid.Column="2" Margin="2" Width="100" Height="25" Click="Button_Click_10">关闭当前</Button>

            </Grid>
        </GroupBox>
        <GroupBox Margin="2,10" Header="创建圆管" Height="240">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center">圆心:0,0</TextBlock>
                <Label Grid.Row="1" Grid.Column="0">半径:</Label>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtBoxRadius" Height="25">30</TextBox>
                <Label Grid.Row="2" Grid.Column="0">长度:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtBoxLength" Height="25">100</TextBox>
                <Label Grid.Row="3" Grid.Column="0">壁厚:</Label>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtBoxThickness" Height="25">2</TextBox>
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Width="150" Height="25" Click="Button_Click_7">绘制</Button>
            </Grid>
        </GroupBox>
    </StackPanel>
    
</Window>
