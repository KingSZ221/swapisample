<Window x:Class="wpfapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfapp"
        mc:Ignorable="d"
        Title="SolidWorks API Test" Height="800" Width="400">
    <DockPanel LastChildFill="True">
        <!-- 顶部区域 -->
        <DockPanel DockPanel.Dock="Top">
            <Menu x:Name="mainMenu" DockPanel.Dock="Top" Height="20"/>
            <ToolBarTray x:Name="mainToobar" DockPanel.Dock="Top" Height="75"/>
        </DockPanel>

        <!-- 左侧工具箱 -->
        <TabControl x:Name="mainToolbox" DockPanel.Dock="Left" Width="0"/>

        <!-- 右侧属性面板 -->
        <GridSplitter DockPanel.Dock="Right" Width="5"/>
        <StackPanel x:Name="mainProp" DockPanel.Dock="Right" Width="0"/>

        <!-- 底部输出窗口 -->
        <GridSplitter DockPanel.Dock="Bottom" Height="5"/>
        <TabControl x:Name="mainOutput" DockPanel.Dock="Bottom" Height="600"/>

        <!-- 中央编辑器 -->
        <StackPanel Height="10">
        </StackPanel>
    </DockPanel>
    
    
</Window>
