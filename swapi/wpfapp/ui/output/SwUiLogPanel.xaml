<UserControl x:Class="wpfapp.ui.output.SwUiLogPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfapp.ui.output"
        mc:Ignorable="d"
        d:DesignHeight="600" d:DesignWidth="400">
    <DockPanel>
        <!-- 工具栏 -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="清空" Click="ClearButton_Click"/>
                <Separator/>
                <CheckBox Content="自动滚动" IsChecked="True" x:Name="AutoScrollCheckBox"/>
                <CheckBox Content="自动换行" IsChecked="True" x:Name="WordWrapCheckBox"/>
                <Separator/>
                <ComboBox x:Name="LogLevelCombo" Width="100" SelectedIndex="0">
                    <ComboBoxItem>全部</ComboBoxItem>
                    <ComboBoxItem>调试</ComboBoxItem>
                    <ComboBoxItem>信息</ComboBoxItem>
                    <ComboBoxItem>警告</ComboBoxItem>
                    <ComboBoxItem>错误</ComboBoxItem>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>

        <!-- 日志显示区域 -->
        <RichTextBox x:Name="LogTextBox" IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </DockPanel>
</UserControl>
